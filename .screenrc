# GENERAL
altscreen on
defscrollback 10000
mousetrack on
startup_message off

# HARDSTATUS
hardstatus alwayslastline
hardstatus string "%= %{= +b kW}%-w%{kW} %n* %t %{-}%+w %="

# SWITCH WINDOWS
# Ctrl + Alt + Left
bindkey "^[[1;7C" prev
# Ctrl + Left
bindkey "\033[1;5D" prev
# Ctrl + Alt + Right
bindkey "^[[1;7D" next
# Ctrl + Right
bindkey "\033[1;5C" next

# RESIZE PANES
# Ctrl + A + Left
bind -k kl resize -h -10
# Ctrl + A + Right
bind -k kr resize -h +10
# Ctrl + A + Up
bind -k ku resize -v +10
# Ctrl + A + Down
bind -k kd resize -h -10

# SCREEN START FROM 1
bind c screen 1
bind 0 select 10
screen 1
